<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tutorial_medicine"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/description_medicine_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:background="@color/colorAccent"
        android:clickable="false"
        android:padding="8sp"
        android:text="@string/description_medicine_row"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="112dp"
        android:background="@color/colorAccent"
        android:clickable="false"
        android:padding="8sp"
        android:text="@string/description_to_home"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/description_add_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="4dp"
        android:background="@color/colorAccent"
        android:clickable="false"
        android:padding="8sp"
        android:text="@string/description_add_medicine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow_add_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:scaleX="2"
        android:scaleY="3"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/description_add_medicine"
        app:layout_constraintEnd_toEndOf="@+id/description_add_medicine"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/description_add_medicine"
        app:srcCompat="@drawable/ic_arrow_drop_up_black_24dp" />

    <ImageView
        android:id="@+id/arrow_medicine_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:scaleX="2"
        android:scaleY="3"
        android:tint="@color/colorAccent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/description_medicine_row"
        app:layout_constraintEnd_toEndOf="@+id/description_medicine_row"
        app:layout_constraintStart_toStartOf="@+id/description_medicine_row"
        app:srcCompat="@drawable/ic_arrow_drop_up_black_24dp" />

    <ImageView
        android:id="@+id/arrow_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:scaleX="2"
        android:scaleY="3"
        android:tint="@color/colorAccent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/description_to_home"
        app:layout_constraintStart_toStartOf="@+id/description_to_home"
        app:layout_constraintTop_toTopOf="@+id/description_to_home"
        app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

